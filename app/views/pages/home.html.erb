<!-- // EXTRACTS // -->
<h2><%= t('.medias') %></h2>
<h3><%= t('.extracts') %></h3>
<% @extracts.each do |extract| %>
  <div>
    <!-- // Here Extract - needs Cloudinary tag// -->
    <% if extract.music.attached? %>
      <%#= cl_video_tag("#{extract.music.key}") %>
      <figure>
      <figcaption>Listen to
        <%= extract.title %>
        <%= extract.composer %>
        <%= extract.musician %>
        <%= extract.description %>:</figcaption>
      <audio
          controls
          src="<%= cloudinary_url(extract.music.key, :resource_type=>"video") %>">
              Your browser does not support the
              <code>audio</code> element.
      </audio>
      </figure>
    <% end %>
    <!-- // -->
  </div>
<% end %>

<h2><%= t('.agenda') %></h2>
<h3><%= t('.next_dates') %></h3>
<!-- // AGENDAS //  -->
<% @agendas.each do |agenda| %>
  <div>
    <%= agenda.date %>
